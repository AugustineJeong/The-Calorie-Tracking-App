<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramActivity"
    android:background="@color/colorAccent">

    <EditText
        android:id="@+id/servingText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="1"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/servings"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/servings"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="# SERVINGS "
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sugar" />

    <EditText
        android:id="@+id/sugarText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sugar"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/proteinText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/protein"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/cholesterolText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cholesterol"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/sodiumText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sodium"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/carbohydrateText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/carbohydrate"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/caloriesText"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/calories"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/fatText"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:hint="enter value"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fat"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sugar"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sugar"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sodium" />

    <TextView
        android:id="@+id/sodium"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sodium"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cholesterol" />

    <TextView
        android:id="@+id/cholesterol"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Cholesterol"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Protein"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbohydrate" />

    <TextView
        android:id="@+id/carbohydrate"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Carbohydrate"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fat" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Fat"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nutrition Facts"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Calories"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/loadingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="LOADING DATA"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_background_2"
        android:fontFamily="@font/poppins_semibold"
        android:text="Record Data"
        android:textColor="@color/colorAccent"
        android:textSize="17.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servings" />

</androidx.constraintlayout.widget.ConstraintLayout>