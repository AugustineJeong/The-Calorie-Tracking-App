<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramActivity">

    <EditText
        android:id="@+id/sugarText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/sugar"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/proteinText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/protein"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/cholesterolText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/cholesterol"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/sodiumText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/sodium"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/carbohydrateText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/carbohydrate"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/caloriesText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/calories"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sugar"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Sugar"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sodium" />

    <TextView
        android:id="@+id/sodium"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Sodium"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cholesterol" />

    <TextView
        android:id="@+id/cholesterol"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Cholesterol"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Protein"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbohydrate" />

    <TextView
        android:id="@+id/carbohydrate"
        android:layout_width="170dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Carbohydrate"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fat" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Fat"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="207dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        android:text="Nutrition Facts"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:fontFamily="casual"
        android:text="Calories"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <EditText
        android:id="@+id/fatText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:text="unrecognized"
        app:layout_constraintBaseline_toBaselineOf="@+id/fat"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:fontFamily="casual"
        android:text="Record Data"
        android:textColor="#FFFFFF"
        android:textSize="17.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sugar" />

    <TextView
        android:id="@+id/loadingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="casual"
        android:text="LOADING DATA"
        android:textColor="#4CAF50"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>